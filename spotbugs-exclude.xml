<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude JMH generated files -->
    <Match>
        <Package name="~.*\.jmh_generated\..*"/>
    </Match>
    
    <!-- Exclude ANTLR generated parser files -->
    <Match>
        <Class name="~.*\.parser\.qasm\.OpenQasm3.*"/>
    </Match>
    
    <!-- Exclude generated files in build directories -->
    <Match>
        <Source name="~.*generated.*"/>
    </Match>
    
    <!-- Exclude build directories -->
    <Match>
        <Source name="~.*build.*"/>
    </Match>
    
    <!-- Exclude specific SpotBugs violations that are acceptable for this codebase -->
    
    <!-- Exclude EI (Expose Internal) violations - acceptable for performance-critical code -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    
    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- Exclude missing default case in switch - acceptable when all cases are covered -->
    <Match>
        <Bug pattern="SF_SWITCH_NO_DEFAULT"/>
    </Match>
    
    <!-- Exclude dead store violations - may be acceptable for clarity -->
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
    </Match>
    
    <!-- Exclude duplicate branch violations - may be acceptable for readability -->
    <Match>
        <Bug pattern="DB_DUPLICATE_BRANCHES"/>
    </Match>
    
    <!-- Exclude instanceof violations - may be acceptable for error handling -->
    <Match>
        <Bug pattern="BC_IMPOSSIBLE_INSTANCEOF"/>
    </Match>
    
    <Match>
        <Bug pattern="BC_VACUOUS_INSTANCEOF"/>
    </Match>
</FindBugsFilter>